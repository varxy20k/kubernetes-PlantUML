' Styling
' ##################################

hide stereotype

!definelong KubernetesEntityColoring(e_stereo)
skinparam rectangle<<e_stereo>> {
    BackgroundColor KUBERNETES_BG_COLOR
    BorderColor transparent
    Shadowing false
}
!enddefinelong

' Overwriting Elements
' ##################################

!definelong KubernetesEntity(e_alias, e_label, e_techn, e_color, e_sprite, e_stereo)
rectangle "<color:e_color><$e_sprite></color>\n\n==e_label" <<e_stereo>> as e_alias
!enddefinelong

!definelong KubernetesEntity(e_alias, e_label, e_techn, e_descr, e_color, e_sprite, e_stereo)
rectangle "<color:e_color><$e_sprite></color>\n\n==e_label" <<e_stereo>> as e_alias
!enddefinelong

!procedure KubernetesAddonEntity(e_alias, e_label, e_techn, e_color, e_sprite, e_stereo)
rectangle "==e_label\n<color:e_color><$e_sprite></color>" <<e_stereo>> as e_alias
!endprocedure

!procedure KubernetesAddonEntity(e_alias, e_label, e_techn, e_descr, e_color, e_sprite, e_stereo)
rectangle "==e_label\n<color:e_color><$e_sprite></color>" <<e_stereo>> as e_alias
!endprocedure

!procedure KubernetesAddonEntity(e_alias, e_label, e_techn, e_descr, e_color, e_sprite_1, e_sprite_2, e_stereo)
rectangle "==e_label\n<color:e_color><$e_sprite_1><$e_sprite_2></color>" <<e_stereo>> as e_alias
!endprocedure
